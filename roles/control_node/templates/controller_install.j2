[automationcontroller]
{{ short_name }} ansible_connection=local

{% if automationhub is defined and automationhub | bool %}
[automationhub]
{% endif %}

[servicescatalog_workers]

[database]
{{ short_name }} ansible_connection=local

[all:vars]
admin_password='{{ admin_password }}'
pg_host={{ short_name }}
pg_port=5432
pg_password='{{ admin_password }}'

{% if automationhub is defined and automationhub | bool %}
automationhub_admin_password='{{ admin_password }}'
automationhub_pg_host={{ short_name }}
automationhub_pg_password='{{ admin_password }}'
{% endif %}

postgresql_admin_username=postgres
postgresql_admin_password='{{ admin_password }}'

controller_postinstall=true
controller_license_file="{{ aap_dir }}/manifest.zip"
controller_postinstall_dir="{{ aap_dir }}/config"

gpgcheck='{{ gpgcheck | default(1)}}'

registry_username='{{ redhat_username }}'
registry_password='{{ redhat_password }}'
bundle_install=true
bundle_dir='{{ aap_dir }}/bundle'
